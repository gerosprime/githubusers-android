<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="@dimen/list_item_height"
    android:layout_width="match_parent" >

    <ImageView
        android:id="@+id/viewholder_item_list_image"
        android:layout_width="@dimen/item_user_image_size"
        android:layout_height="@dimen/item_user_image_size"
        android:layout_marginStart="16dp"
        tools:src="@tools:sample/avatars"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/viewholder_item_list_content_user"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        tools:text="Lorem"
        app:layout_constraintBottom_toBottomOf="@+id/viewholder_item_list_image"
        app:layout_constraintEnd_toStartOf="@+id/viewholder_item_list_notes"
        app:layout_constraintStart_toEndOf="@+id/viewholder_item_list_image"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.3" />

    <TextView
        android:id="@+id/viewholder_item_list_content_secondary"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        tools:text="Lorem 1"
        app:layout_constraintEnd_toStartOf="@+id/viewholder_item_list_notes"
        app:layout_constraintStart_toEndOf="@+id/viewholder_item_list_image"
        app:layout_constraintTop_toBottomOf="@+id/viewholder_item_list_content_user" />

    <ImageView
        android:id="@+id/viewholder_item_list_notes"
        android:layout_width="@dimen/item_note_icon_size"
        android:layout_height="@dimen/item_note_icon_size"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_launcher_foreground" />

</androidx.constraintlayout.widget.ConstraintLayout>